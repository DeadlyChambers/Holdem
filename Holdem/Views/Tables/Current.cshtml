@model CommonCardLibrary.TableViewModel



@using (Html.BeginForm())
{
    <div></div>
    @Html.AntiForgeryToken()
    if (!string.IsNullOrEmpty(@ViewBag.NotificationMessage))
    {
        <div class="alert alert-info" role="alert">@ViewBag.NotificationMessage</div>
    }
   
         @Html.Partial("CurrentTable", Model)
         
   
}
@section scripts
{
    <script type="text/javascript">
        @if (Model!= null && Model.Players.Count > 4)
        {
            @:$(".card").height(105).width(125);
                    @:$(".current-hand").attr("style", "top:87px");
                    @:$(".board").attr("style", "margin-top:155px; margin-bottom:20px;")
                    @:$(".card-container:last").attr("style", "margin-bottom:140px");
                }

    </script>

}
