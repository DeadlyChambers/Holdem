<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/bundles/styles")

</head>
<body>
    <div class="row" style="background-color: #945514; margin-bottom: 50px;">
        <div class="col-md-8 col-md-offset-2 ">
            @Html.Partial("_LoginPartial")
            <ul class="nav navbar-nav navbar-right" style="margin-right: 0;">
                <li role="presentation">@Html.ActionLink("Home", "Index", "Home")</li>
                <li role="presentation">@Html.ActionLink("Players", "Index", "Players")</li>
                <li role="presentation">@Html.ActionLink("Tables", "Index", "Tables")</li>
            </ul>

        </div>
    </div>
<div class="container body-content">
    @RenderBody()
</div>

@Scripts.Render("~/bundles/scripts")
@RenderSection("scripts", required: false)
<script type="text/javascript">
    $(document).ready(function() {
        $(".card-container .card:last").addClass("second-card");
    });
</script>
</body>
</html>
